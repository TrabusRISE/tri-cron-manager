[
    {
        "name": "dsm-station-refresh",
        "app_name": "dsm",
        "command": "python -m tri.cli.main dsm run --refresh_stations=True",
        "schedule": "0 0 * * 0",
        "enabled": true,
        "config": {
            "metadata": {
                "fly_process_group": "cron"
            },
            "auto_destroy": true,
            "disable_machine_autostart": true,
            "guest": {
                "cpu_kind": "shared",
                "cpus": 1,
                "memory_mb": 512
            },
            "image": "registry.fly.io/dsm:latest",
            "restart": {
                "max_retries": 1,
                "policy": "no"
            }
        }
    },
